[pycodestyle]
max-line-length = 540

disable=C0103,C0114,C0115,C0116,W0401,W0702,E5142,C0415,W0614,C0303,C0301,R1705,W0611,C0121,W0611,R0801,R5103,R1714,W0221,R1710,W0613,C0411,C0413,C0209,W0622,C0412

[DESIGN]

# Maximum number of locals for function / method body
max-locals=50

# Maximum number of arguments for function / method
max-args=20
max-attributes=20

[main]
max-branches=20


min-public-methods=0
max-public-methods=15